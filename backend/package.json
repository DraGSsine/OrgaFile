    "@langchain/google-genai": "^0.1.6",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/mongoose": "^10.1.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.15",
    "@types/multer": "^1.4.12",
    "adm-zip": "^0.5.16",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
